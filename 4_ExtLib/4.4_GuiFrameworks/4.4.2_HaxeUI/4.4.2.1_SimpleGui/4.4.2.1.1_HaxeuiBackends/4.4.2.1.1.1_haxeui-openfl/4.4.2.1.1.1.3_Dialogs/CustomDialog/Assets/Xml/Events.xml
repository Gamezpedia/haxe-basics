<?xml version="1.0" encoding="utf-8"?>
<vbox width="100%" height="400">
	<style>
		#notification-tabs .tabview-content {
			padding: 0px;
		}

		#events, #tech {
			border: none;
		}

		.modal-component {
			filter: none; /* openfl seems to underperform with filters */
		}
	</style>
	
	<tabview id="notification-tabs" width="100%" height="100%">
		<vbox width="100%" height="100%" text="Events" style="padding: 0;" >
			<scrollview id="events" width="100%" height="100%" contentWidth="100%" />
		</vbox>
		<vbox width="100%" height="100%" text="Tech">
			<scrollview id="tech" width="100%" height="100%" contentWidth="100%" />
		</vbox>
	</tabview>
</vbox>