<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	
	<label text="Basic item renderer of DropDown:" />
	
	<dropdown text="Select Item" width="250">
		<itemrenderer width="100%">
			<hbox width="100%">
				<image id="icon" />
				<label id="value" />
				<checkbox id="flag" />
			</hbox>
		</itemrenderer>
		<data>
			<item icon="res/img/tuxIcon.png" value="Item 1" />
			<item icon="res/img/tuxIcon.png" value="Item 2" />
			<item icon="res/img/tuxIcon.png" value="Item 3" />
		</data>
	</dropdown>
	
	<spacer height="20" />
	<label text="Basic item renderer of ListView:" />
	
	<listview width="150" height="150">
		<itemrenderer width="100%">
			<hbox width="100%">
				<image id="icon" />
				<label id="value" />
				<checkbox id="flag" />
			</hbox>
		</itemrenderer>
		<data>
			<item icon="res/img/tuxIcon.png" value="Item 1" />
			<item icon="res/img/tuxIcon.png" value="Item 2" />
			<item icon="res/img/tuxIcon.png" value="Item 3" />
		</data>
	</listview>
	
	<spacer height="20" />
	<label text="Basic item renderer of TableView:" />
	
	<tableview width="401" height="200">
		<header>
			<column id="c1" text="Column 1" width="200" height="30" />
			<column id="c2" text="Column 2" width="200" height="30" sortable="true" />
		</header>
		<itemrenderer width="100%">
			<hbox height="40" width="100%">
				<image id="icon" />
				<label id="value" />
				<checkbox id="flag" />
			</hbox>
		</itemrenderer>
		<itemrenderer width="100%">
			<hbox height="40" width="100%">
				<image id="icon" />
				<label id="value" />
				<checkbox id="flag" />
			</hbox>
		</itemrenderer>
		<data>
			<row icon="res/img/tuxIcon.png" c1="Cell 1:1" c2="Cell 1:2" />
			<row icon="res/img/tuxIcon.png" c1="Cell 2:1" c2="Cell 2:2" />
			<row icon="res/img/tuxIcon.png" c1="Cell 3:1" c2="Cell 3:2" />
		</data>
	</tableview>
	
</vbox>