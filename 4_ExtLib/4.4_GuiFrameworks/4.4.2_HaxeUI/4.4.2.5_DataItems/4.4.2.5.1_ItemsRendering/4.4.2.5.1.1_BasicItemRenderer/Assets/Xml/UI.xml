<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	
	<label text="Basic item renderer of DropDown:" />
	
	<dropdown text="Select Item" width="250">
		<data>
			<item icon="res/img/tuxIcon.png" value="Item 1" />
			<item icon="res/img/tuxIcon.png" value="Item 2" />
			<item icon="res/img/tuxIcon.png" value="Item 3" />
		</data>
	</dropdown>
	
	<spacer height="20" />
	<label text="Basic item renderer of ListView:" />
	
	<listview width="100" height="150">
		<data>
			<item icon="res/img/tuxIcon.png" value="Item 1" />
			<item icon="res/img/tuxIcon.png" value="Item 2" />
			<item icon="res/img/tuxIcon.png" value="Item 3" />
		</data>
	</listview>
	
	<spacer height="20" />
	<label text="Basic item renderer of TableView:" />
	
	<tableview width="201" height="150">
		<header>
			<column id="c1" text="Column 1" width="100" height="30" />
			<column id="c2" text="Column 2" width="100" height="30" sortable="true" />
		</header>
		<data>
			<row c1="Value 1:1" c2="Value 1:2" />
			<row c1="Value 2:1" c2="Value 2:2" />
			<row c1="Value 3:1" c2="Value 3:2" />
		</data>
	</tableview>
	
</vbox>
